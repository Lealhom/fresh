<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hy.manager.domain.business.CommentMapper">
	<insert id="insert" parameterType="Comment" useGeneratedKeys="true" keyProperty="id">
		insert into t_comment
		(customerId,orderId,productId,createTime,content,rank)
		values
		(#{customerId},#{orderId},#{productId},#{createTime},#{content},#{rank})
	</insert>
	
	<update id="update" parameterType="Comment">
		update t_comment
		<set>
			content=#{content},
			rank=#{rank}
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="int">
		delete from t_comment where id=#{id}
	</delete>
	
	<delete id="deleteByIds">
		delete from t_comment where id in
		<foreach collection="ids" item="id" open="(" close=")" separator=",">
		#{id}
		</foreach>
	</delete>
	<select id="selectById" resultType="Comment">
		select * from t_comment where id=#{id}
	</select>
	<select id="listByProductId" resultType="map">
		select * from t_comment where productId=#{productId}
	</select>
	<select id="listByOrderId" resultType="map">
		select * from t_comment where orderId=#{orderId}
	</select>
	
	<sql id="gridWhere">
		from t_comment c
		left join t_user u on c.customerId=u.id
		<where>
		</where>
	</sql>
	<select id="listPaged" resultType="Comment">
		select c.id,c.customerId,c.orderId,c.createTime,c.content,c.rank,u.username
		<include refid="gridWhere"/>
		limit #{start},#{rows}
	</select>
	<select id="count" resultType="long">
		select count(*)
		<include refid="gridWhere"/>
	</select>
</mapper>